<h1>Reviews</h1>
<h3 style="margin-bottom: 0;">spotデータ</h3>
<div class="spot" style="display: flex;
       flex-direction: row;
       flex-wrap: wrap;">
  <% @spots.each do |spot| %>
      <ul>
        <li>address: <%= spot.address %></li>
        <li>lat: <%= spot.lat %></li>
        <li>lon: <%= spot.lon %></li>
        <li>review_id: <%= spot.review_id %></li>
      </ul>
  <% end %>
</div>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>reason</th>
      <th>duration</th>
      <th>good</th>
      <th>bad</th>
      <th>advice</th>
      <th>address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.id %></td>
        <td><%= review.reason %></td>
        <td><%= review.duration %></td>
        <td><%= review.good %></td>
        <td><%= review.bad %></td>
        <td><%= review.advice %></td>
        <td><%= review.spot.address %></td>
      </tr>
    <% end %>
  </tbody>
</table>
