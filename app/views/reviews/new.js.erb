<%# jqueryを用いてflash messageを表示させる %>
<% if Rails.env.development? %>
  if($("#flash_messages").hasClass("flash")){
    $("#flash_messages").removeClass()
  }
  <% flash.each do |type, message| %>
    $("#flash_messages").addClass("flash <%= type %>")
    $("#flash_messages").html("<%= message.html_safe %>")
  <% end %>
<% end %>
