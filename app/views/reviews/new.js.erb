<%# jqueryを用いてflash messageを表示させる %>
<% if Rails.env.development? %>
  if($("#flash_message").hasClass("flash")){
    $("#flash_message").removeClass()
  }
  <% flash.each do |type, message| %>
    $("#flash_message").addClass("flash <%= type %>")
    $("#flash_message").html("<%= message.html_safe %>")
  <% end %>
<% end %>
