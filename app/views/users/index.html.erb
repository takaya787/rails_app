<% provide(:title, "users　一覧") %>
<%= render 'top' %>
<p id="notice"><%= notice %></p>
<div id="index">
  <%= form_with url:search_users_path, method: :get, local: true do |form| %>
    <div class="search">
      <h1>ユーザー検索フォーム</h1>
      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>
      <div class="field">
        <%= form.label :email %>
        <%= form.email_field :email %>
      </div>

      <div class="actions">
        <%= form.submit :search %>
      </div>
      <%= link_to "user一覧を表示する",users_path , {class:"users"}%>
    </div>
  <% end %>
  <h1>Users</h1>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% if @users %>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: '登録データは投稿も含め全て失われますが、本当によろしいですか？' } %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>
